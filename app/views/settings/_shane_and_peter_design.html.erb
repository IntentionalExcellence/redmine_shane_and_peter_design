  </p>

  <p>
    <%= content_tag(:label, l(:shane_and_peter_design_custom_javascript_label)) %>
    <%= text_area_tag("settings[custom_javascript]", @settings['custom_javascript'], :size => '80x20') %>
  </p>
</fieldset>
